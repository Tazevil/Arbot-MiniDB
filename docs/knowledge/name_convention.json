      {
        "viewtype_name": "DEGAT SUR EXISTANT",
        "viewtype_ID": "DEG"
      }
    ]
  },
  "validations": {
    "id_consistency": "file_ID == zone_ID*1000 + cat_ID*100 + cat_img_ID*10",
    "id_uniqueness_scope": "cat_img_ID unique per (zone_ID, cat_ID)",
    "detail_charset": "^[A-Z0-9À-ÖØ-Ý]+(?:-[A-Z0-9À-ÖØ-Ý]+)*$",
    "no_spaces_in_detail": true,
    "viewtype_enum": [
      "PAN",
      "GEN",
      "DET",
      "MAC",
      "MGM",
      "MGS",
      "MGP",
      "MGB",
      "DEG"
