{
  "name": "NameGen_GEN",
  "version": "v1.5",
  "date_iso": "2025-10-15",
  "pattern": "^(?<file_ID>\\d{4})_(?<detail>[A-Z0-9À-ÖØ-Ý]+(?:-[A-Z0-9À-ÖØ-Ý]+)*)_(?<viewtype>[A-Z]{3})\\.(?<ext>jpg|jpeg|png|webp|tiff)$",
  "fields": {
    "zone_ID": "int [0..9]",
    "cat_ID": "int [0..99]",
    "cat_img_ID": "int [1..99]",
    "file_ID_formula": "zone_ID*1000 + cat_ID*100 + cat_img_ID*10",
    "file_ID_padding": "filename uses file_ID padded to 4 digits",
    "detail": "UPPERCASE, accents allowed, hyphens, no spaces",
    "viewtype": "enum code",
    "ext": [
      "jpg",
      "jpeg",
      "png",
      "webp",
      "tiff"
    ]
  },
